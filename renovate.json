{
  "baseBranches": [
    "main",
    "testing/alpine_next"
  ],
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>whitesource/merge-confidence:beta",
    "config:base",
    ":disableRateLimiting"
  ],
  "labels": ["dependencies"],
  "dependencyDashboard": true,
  "separateMajorMinor": true,
  "separateMinorPatch": true,
  "separateMultipleMajor": true,
  "regexManagers": [
    {
        "fileMatch": [
            "(^|/|\\.)Dockerfile$"
        ],
        "matchStrings": [
            "pecl install -f apcu-(?<currentValue>.*?) \\\n"
        ],
        "depNameTemplate": "github.com/krakjoe/apcu",
        "datasourceTemplate": "github-releases"
    },
    {
      "fileMatch": [
          "(^|/|\\.)Dockerfile$"
      ],
      "matchStrings": [
          "pecl install -f imagick-(?<currentValue>.*?) \\\n"
      ],
      "depNameTemplate": "github.com/Imagick/imagick",
      "datasourceTemplate": "github-releases"
    },
    {
      "fileMatch": [
          "(^|/|\\.)Dockerfile$"
      ],
      "matchStrings": [
          "pecl install -f redis-(?<currentValue>.*?) \\\n"
      ],
      "depNameTemplate": "github.com/phpredis/phpredis",
      "datasourceTemplate": "github-releases"
    },
    {
      "fileMatch": [
          "(^|/|\\.)Dockerfile$"
      ],
      "matchStrings": [
          "pecl install -f xdebug-(?<currentValue>.*?) \\\n"
      ],
      "depNameTemplate": "github.com/xdebug/xdebug",
      "datasourceTemplate": "github-releases"
    },
    {
      "fileMatch": [
          "(^|/|\\.)Dockerfile$"
      ],
      "matchStrings": [
          "pecl install -f yaml-(?<currentValue>.*?) \\\n"
      ],
      "depNameTemplate": "github.com/php/pecl-file_formats-yaml",
      "datasourceTemplate": "github-releases"
    }
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "matchPackageNames": [
        "php",
        "python"
      ]
    },
    {
      "enabled": false,
      "matchDatasources": [
        "docker"
      ],
      "matchUpdateTypes": [
        "major",
        "minor"
      ],
      "matchPackageNames": [
        "php",
        "python"
      ]
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "matchPackageNames": [
        "node",
        "postgres",
        "redis",
        "solr",
        "varnish"
      ]
    },
    {
      "enabled": false,
      "matchDatasources": [
        "docker"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "matchPackageNames": [
        "node",
        "postgres",
        "redis",
        "solr",
        "varnish"
      ]
    },
    {
      "groupName": "ELK Stack",
      "allowedVersions": "<7.11.0",
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "docker.elastic.co/elasticsearch/elasticsearch",
        "docker.elastic.co/logstash/logstash",
        "docker.elastic.co/kibana/kibana"
      ]
    },
    {
      "enabled": false,
      "matchDatasources": [
        "docker"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "matchPackageNames": [
        "docker.elastic.co/elasticsearch/elasticsearch",
        "docker.elastic.co/logstash/logstash",
        "docker.elastic.co/kibana/kibana"
      ]
    },
    {
      "enabled": false,
      "matchDatasources": [
        "docker"
      ],
      "matchUpdateTypes": [
        "major",
        "minor"
      ],
      "matchPackageNames": [
        "alpine"
      ]
    }
  ]
}
